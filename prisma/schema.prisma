generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Posts {
  id      String   @id @default(uuid())
  title   String
  content String[]
  tags    String[]
  user    Users    @relation(fields: [userId],  references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId  String

  @@map("posts")
}


model Users {
  id        String @id @default(uuid())
  username  String @unique
  password  String
  image_url String
  posts     Posts[]

  @@map("users")
}
